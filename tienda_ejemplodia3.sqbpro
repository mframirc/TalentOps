filter/></table></browse_table_settings></tab_browse><tab_sql><sql name="Comprobar clave &amp;foránea">PRAGMA foreign_key_check;</sql><sql name="Comprobar &amp;integridad*">CREATE TABLE productos (
    id INTEGER PRIMARY KEY,
    nombre TEXT NOT NULL,
    precio REAL NOT NULL,
    categoria TEXT,
    stock INTEGER DEFAULT 0
);
INSERT INTO productos VALUES
